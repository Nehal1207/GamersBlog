<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
            <h1 style="text-align:center;">Edit <%=game.name %></h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/games/<%=game._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="game[name]">Name</label>
                        <input class="form-control" type="text" name="game[name]" value="<%= game.name %>">
                    </div>
                    <div class="form-group"> 
                        <label for="image">New Image (Leave empty if not updating)</label>
                        <input type="file" id="image" name="image" accept="image/*" >
                    </div>
                    <div class="form-group">
                        <label for="game[description">Description</label>
                        <input class="form-control" type="text" name="game[description]" value="<%= game.description%>">
                    </div>
                    <div class="form-group"> 
                        <label for="game[price">Price</label>
                        <input class="form-control" type="number" name="game[price]" value="<%= game.price%>">
                    </div>
                    <div class="form-group"> 
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/games/<%=game._id %>" class="btn btn-xs btn-warning" >Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>